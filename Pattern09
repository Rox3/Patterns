#include<iostream>
using namespace std;
int main()
{   int n;
    cout<<"hello folk lets enter the value of n to draw the pattern";
    cin>>n;
    cout<<"\n";

    for (int i= 1,j; i <=n; ++i)
    {
        for (j = 1; j<i+n; ++j)
        {
            if (i+j>n)
                cout<<j-(n-i);
            else
                cout<<" ";

        }
        cout<<"\n";
    }
    
return 0;
}
