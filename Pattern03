#include<iostream>
using namespace std;
int main()
{   int n;
    cout<<"hello folk lets enter the value of n to draw the pattern";
    cin>>n;
    cout<<"\n";

    for (int i= 1,j; i <=n; ++i)
    {
        for (j = 1; j<=2*n-1; ++j)
        {
            if (i+j>n&&j<i+n)
            {
                if((i+j)%2==0)
                    cout<<"*";
                else
                    cout<<" ";
            }
            else
            {
                cout<<" ";
            }
            
                
            
                

        }
        cout<<"\n";
    }
    
return 0;
}
